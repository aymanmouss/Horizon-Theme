{%- if block.settings.type_of_cell == 'header' -%}
  <th {{ block.shopify_attributes }}>
{%- elsif block.settings.type_of_cell == 'body' -%}
  <td {{ block.shopify_attributes }}>
{% endif %}
{% content_for 'blocks' %}
{%- if block.settings.type_of_cell == 'body' -%}
  </td>
{%- elsif block.settings.type_of_cell == 'header' -%}
  </th>
{% endif %}

{% schema %}
{
  "name": "Table Cell",
  "blocks": [
    {
      "type": "@theme"
    }
  ],
  "settings": [
    {
      "type": "select",
      "label": "Type of cell",
      "id": "type_of_cell",
      "options": [
        {
          "value": "header",
          "label": "Header Cell"
        },
        {
          "value": "body",
          "label": "Body Cell"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Header Cell",
      "settings": {
        "type_of_cell": "header"
      }
    },
    {
      "name": "Body Cell",
      "settings": {
        "type_of_cell": "body"
      }
    }
  ]
}
{% endschema %}
